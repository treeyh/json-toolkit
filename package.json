{
  "name": "json-toolkit",
  "displayName": "Json Toolkit",
  "description": "A toolkit for common JSON operations.",
  "version": "0.0.4",
  "publisher": "Treeyh",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:json-toolkit.validateJson",
    "onCommand:json-toolkit.prettifyJson",
    "onCommand:json-toolkit.minifyJson",
    "onCommand:json-toolkit.unescapeJson",
    "onCommand:json-toolkit.escapeJson",
    "onCommand:json-toolkit.jsonToUnicode",
    "onCommand:json-toolkit.unicodeToJson",
    "onCommand:json-toolkit.sortJsonByKey"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "json-toolkit.validateJson",
        "title": "Json Toolkit: Validate JSON"
      },
      {
        "command": "json-toolkit.prettifyJson",
        "title": "Json Toolkit: Prettify Json"
      },
      {
        "command": "json-toolkit.unescapeJson",
        "title": "Json Toolkit: Unescape JSON"
      },
      {
        "command": "json-toolkit.escapeJson",
        "title": "Json Toolkit: Escape JSON"
      },
      {
        "command": "json-toolkit.minifyJson",
        "title": "Json Toolkit: Minify JSON"
      },
      {
        "command": "json-toolkit.jsonToUnicode",
        "title": "Json Toolkit: JSON to Unicode Escaped"
      },
      {
        "command": "json-toolkit.unicodeToJson",
        "title": "Json Toolkit: Unicode Escaped to JSON"
      },
      {
        "command": "json-toolkit.sortJsonByKey",
        "title": "Json Toolkit: Sort JSON by Keys"
      }
    ],
    "submenus": [
      {
        "id": "jsonToolkit.submenu",
        "label": "Json Toolkit"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "jsonToolkit.submenu",
          "group": "z_json_toolkit@1",
          "when": "editorLangId == json || editorLangId == jsonc || editorLangId == plaintext || editorLangId == markdown || resourceExtname == .json || resourceExtname == .txt || resourceExtname == .md"
        }
      ],
      "jsonToolkit.submenu": [
        {
          "command": "json-toolkit.prettifyJson",
          "group": "1_format@1"
        },
        {
          "command": "json-toolkit.minifyJson",
          "group": "1_format@2"
        },
        {
          "command": "json-toolkit.unescapeJson",
          "group": "2_convert@1"
        },
        {
          "command": "json-toolkit.escapeJson",
          "group": "2_convert@2"
        },
        {
          "command": "json-toolkit.jsonToUnicode",
          "group": "2_convert@3"
        },
        {
          "command": "json-toolkit.unicodeToJson",
          "group": "2_convert@4"
        },
        {
          "command": "json-toolkit.sortJsonByKey",
          "group": "3_format@1"
        },
        {
          "command": "json-toolkit.validateJson",
          "group": "3_format@2"
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/treeyh/json-toolkit.git"
  },
  "bugs": {
    "url": "https://github.com/treeyh/json-toolkit/issues"
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
